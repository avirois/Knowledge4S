pipeline {
    agent { docker { image 'python:3.9.2-alpine3.12' } }
    stages {
        stage('build') {
            steps {
                sh '''
                    python -m venv venv
                    source venv/bin/activate
                    pip install -r requirements.txt
                    '''
            }
        }
        stage('test') {
            steps {
                sh 'source venv/bin/activate && pytest'
            }   
        }
    }
}
