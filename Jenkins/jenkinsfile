pipeline {
    agent { docker { image 'python:3.9.2-alpine3.12' } }
    stages {
        stage('test') {
            steps {
                sh 'ls -la'
                    sh 'uname -a'
                    sh 'pwd'
                    sh 'which pyhton'
                    sh 'which pip'
                    sh 'python -m venv venv'
                    sh 'ls -l venv/bin'
                    sh 'source venv/bin/activate'
                    sh 'which python'
                    sh 'python -m pip install -r requirements.txt'
                    sh 'seems all right'
                    sh 'false'
            }
        }
    }
}
