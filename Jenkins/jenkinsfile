pipeline {
    agent { docker { image 'python:3.9.2-alpine3.12' } }
    stages {
        stage('build') {
            steps {
                sh '''
                    python -m venv venv
                    source activate venv/bin/activate
                    sh 'pip install -r requirements.txt'
                    '''
            }
        }
        stage('test') {
            steps {
                sh 'pytest'
            }   
        }
    }
    post {
        always {
            sh 'deactivate'
        }
    }
}
